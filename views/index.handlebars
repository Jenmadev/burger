<div class="container" id="style">
    <h1>Burger Mania!</h1>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-4">
            <h4>MENU</h4>
            <ol class="menu">  
                {{#each burgers}}
                    {{#unless devoured}} 
                        <li>
                            <p class="listyle">{{burger_name}}</p>
                            <form action="/{{id}}?_method=PUT" method="POST" class="button-size">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="buttonstyle" >Devour It!</button>                    
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>  
                <div class="col-md-6 col-sm-4">
            <h4>ORDERS!</h4>
            <ol>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p>{{burger_name}}</p>
                            {{!-- <form action="/" method="PUT" class="button-size">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="btn btn-primary disabled">Devoured It!</button>            
                            </form> --}}
                        </li>
           
                    {{/if}}
             {{/each}}
            </ol>
        </div>  
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-4 offset-md-3">
            <h2>What would you like to eat?</h2>
                <form method="POST" action="/" class="button-size">
                    <textarea type="text" name="burger"></textarea>
                    <button type="submit">Order</button>
                </form>
        </div>    
    </div>
</div>
